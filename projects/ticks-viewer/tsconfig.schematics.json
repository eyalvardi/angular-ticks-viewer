{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "schematics",
    "outDir": "../../dist/ticks-viewer/schematics",
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    
    "noEmitOnError": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "checkJs": false,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "schematics/**/*"
  ],
  "exclude": [
    "*/files/**/*",
    "**/*spec*"
  ]
}
